<!-- Page Content -->
<div class="container">

    <!-- Resource Name -->
    <div class="row">
      <h1 class="page-header">
        <%= @resource.name %>
        <small><%= link_to @category.name, category_path(@resource.category_id) %></small>
      </h1>

      <p class="lead">
        <%= @resource.tagline %>
      </p>

    </div>
    <!-- END -->

    <div class="row">
      <div class="col-md-8">
        <img class="img-responsive" src="http://placehold.it/800x300" alt="">

        <hr>

        <p><%= @resource.description %></p>
        
        <hr>

        <%= link_to @resource.website, target: '_blank', class: "btn btn-primary" do %>
              去看看<span class="glyphicon glyphicon-chevron-right"></span>
        <% end %>
      </div>

      <!-- Resource Sidebar Widgets Column -->
      <div class="col-md-4">
          <!-- Resource Categories Well -->
        <div class="well">
          <h4>Resource Categories</h4>
          <div class="row">
            <div class="col-lg-6">
              <ul class="list-unstyled">
                <% @categories.each do |category| %>
                    <li>
                        <%= link_to category.name, category %>
                    </li>
                <% end %>
              </ul>
            </div>
          </div>
          <!-- /.row -->
        </div>
          
        <!-- Reviews BEGIN -->
        <div class="well">
          <h4>Reviews</h4>
          <div class="row">
              <div class="col-lg-6"> 
                <div class="star-rating" data-score=<%= @avg_rating %> ></div>
                <em><%= "#{@reviews.count} reviews" %></em>
                <%= render @reviews %>
                <%= render 'reviews/form', category: @category, review: @review, resource: @resource %>
              </div>
          </div>
        </div>
        <!-- Reviews END -->
      </div>
    </div>

    <hr>

    <!-- UY BEGIN -->
    <div id="uyan_frame"></div>
    <script type="text/javascript" src="http://v2.uyan.cc/code/uyan.js?uid=2009366"></script>
    <!-- UY END -->

</div>
<!-- /.container -->

<!-- Raty BEGIN-->
<script>
    $('.star-rating').raty({
        path: '/assets/',
        readOnly: true,
        score: function() {
        return $(this).attr('data-score');
      }
    });
</script>
<!-- Raty END -->