<!-- Page Content -->
<div class="container">

    <div class="row">

        <!-- Entries Column -->
        <div class="col-md-8">

          <h2 class="page-header">
            <%= @category.name %>
          </h2>

          <!-- Resource List -->
          <% @resources.each do |resource| %>
            <h3>
              <%= resource.name %>
            </h3>            
            <div class="row">
              <div class="col-md-3">
                <%= link_to [@category, resource] do %>
                    <img class="img-responsive" src="http://placehold.it/300x300" alt="">
                <% end %>
              </div>

              <div class="col-md-9">
                <p><%= resource.tagline %></p>
                
                <%= link_to [@category, resource], class: "btn btn-primary" do %>
                  Read More <span class="glyphicon glyphicon-chevron-right"></span>
                <% end %>
              </div>
            </div>

            <hr>

          <% end %>
        </div>

        <!-- Sidebar Widgets Column -->
        <div class="col-md-4">

            <!-- Search Well -->
            <div class="well">
                <h4>Blog Search</h4>
                <div class="input-group">
                    <input type="text" class="form-control">
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="button">
                            <span class="glyphicon glyphicon-search"></span>
                    </button>
                    </span>
                </div>
                <!-- /.input-group -->
            </div>

            <!-- Categories Well -->
            <div class="well">
                <h4>Categories</h4>
                <div class="row">
                    <div class="col-lg-6">
                        <ul class="list-unstyled">
                            <li><a href="#">Category Name</a>
                            </li>
                            <li><a href="#">Category Name</a>
                            </li>
                            <li><a href="#">Category Name</a>
                            </li>
                            <li><a href="#">Category Name</a>
                            </li>
                        </ul>
                    </div>
                    <!-- /.col-lg-6 -->
                </div>
                <!-- /.row -->
            </div>
        </div>

    </div>
    <!-- /.row -->

</div>


